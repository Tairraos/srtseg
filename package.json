{
  "name": "srtseg",
  "version": "1.1.2",
  "description": "SRT字幕分词工具 - 将SRT字幕文件从句子级别拆分为词语级别",
  "main": "dist/index.js",
  "bin": {
    "srtseg": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc && cp src/dict.utf8 dist/dict.utf8",
    "dev": "ts-node src/cli.ts",
    "start": "node dist/cli.js",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "prepublishOnly": "npm run build",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "publish:npm": "npm publish"
  },
  "keywords": [
    "srt",
    "subtitle",
    "segmentation",
    "chinese",
    "jieba",
    "cli",
    "tool"
  ],
  "author": "xiaole",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tairraos/srtseg.git"
  },
  "bugs": {
    "url": "https://github.com/tairraos/srtseg/issues"
  },
  "homepage": "https://github.com/tairraos/srtseg#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "nodejieba": "^2.6.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.0"
  },
  "files": [
    "dist",
    "src/dict.utf8",
    "README.md",
    "LICENSE"
  ]
}